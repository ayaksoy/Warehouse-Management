@model IEnumerable<EKStore.Models.Warehouse>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<label>@TempData["Message"]</label>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsStatus)
                </td>
                <td>
                    <a asp-area="Admin" asp-controller="Warehouse" asp-action="Edit" asp-route-id="@item.Id"
                        class="btn btn-primary btn-sm">Edit</a>
                    <a asp-area="Admin" asp-controller="Warehouse" asp-action="Delete" asp-route-id="@item.Id"
                        class="btn btn-danger btn-sm">Delete</a>
                    <a asp-area="Admin" asp-controller="Warehouse" asp-action="Detail" asp-route-id="@item.Id"
                        class="btn btn-danger btn-sm">Detail</a>
                </td>
            </tr>
        }
    </tbody>
</table>
